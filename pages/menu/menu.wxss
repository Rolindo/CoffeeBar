/* pages/menu/menu.wxss */

page {
  background: #f0f0f0;
  font-family: "微软雅黑";
  font-weight: bolder;
}

swiper, swiper-item, swiper-item image {
  width: 100%;
  height: 360rpx;
}

.circle {
  position: relative;
}

.dot {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.dot view {
  float: left;
  width: 18rpx;
  height: 18rpx;
  background: #999;
  border-radius: 50%;
  margin: 0 10rpx;
}

.dot view.active {
  background: #333999;
  width: 32rpx;
  border-radius: 20rpx;
}

/* 左侧菜单 */

.menu .left-box {
  height: 90%;
  width: 180rpx;
  border-right: 1px solid #dfdfdf;
  position: fixed;
  left: 0;
  z-index: 10;
  top: 370rpx;
  box-sizing: border-box;
  background: #f0f0f0;
}

.menu-item {
  width: 180rpx;
  height: 88rpx;
  line-height: 1.2;
  font-size: 26rpx;
  background: #fff;
  border-bottom: 1px solid #dfdfdf;
  display: inline-block;
  text-align: center;
  color: black;
}
.menu-active {
  background: #f0f0f0;
  border-left: 10rpx solid #333999;
}
/* 右侧菜单 */

.right-box {
  width: 74%;
  position: fixed;
  top: 360rpx;
  right: 0;
  height: 77%;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.right-menu {
  height: 100%;
  box-sizing: border-box;
}

.pro-item {
  width: 100%;
}

.right-menu-head {
  height: 65rpx;
  line-height: 65rpx;
  font-size: 28rpx;
  font-weight: 700;
}

.list-box {
  background: #fff;
  font-size: 24rpx;
  padding: 10rpx;
}

.menu-list {
  width: 170rpx;
  display: inline-block;
  text-align: center;
  margin-top: 20rpx;
}

.menu-list image {
  width: 100rpx;
  height: 100rpx;
}

.menu-list>view {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.right-box .pro-item:last-child {
  margin-bottom: 110rpx;
}
